<div class="page-header">
  <h1>Starters</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @starters.each do |starter| %>
      <tr>
        <td><%= starter.name %></td>
        <td><%= starter.description %></td>
        <td><%= starter.category.name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, starter_url(starter), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

