<div class="page-header">
  <h1>New Restriction</h1>
</div>

<%= form_tag(restrictions_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :starter_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :starter_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :entree_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :entree_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Restriction", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
