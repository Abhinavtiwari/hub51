<div class="page-header">
  <h1>Restrictions</h1>
</div>

<p><%= link_to 'Add a New Restriction', new_restriction_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Starter</th>
      <th>Entree</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @restrictions.each do |restriction| %>
      <tr>
        <td><%= restriction.starter_id %></td>
        <td><%= restriction.entree_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, restriction_url(restriction), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_restriction_url(restriction), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, restriction_url(restriction), method: 'delete', data: { confirm: "Do you really want to delete this restriction?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

