<div class="page-header">
  <h1>Editing Restriction #<%= @restriction.id %></h1>
</div>

<%= form_tag(restriction_url(@restriction), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :starter_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :starter_id, @restriction.starter_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :entree_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :entree_id, @restriction.entree_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Restriction", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
