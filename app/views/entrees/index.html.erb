<div class="page-header">
  <h1>Entrees</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>First Selections</th>
      <th>Second Selections</th>
      <th>Points</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entrees.each do |entree| %>
      <tr>
        <td><%= entree.name %></td>
        <td><%= entree.description %></td>
        <td><%= entree.category.name %></td>
        <td><%= entree.first_selections.count %></td>
        <td><%= entree.second_selections.count %></td>
        <td><%= entree.points %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, entree_url(entree), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

