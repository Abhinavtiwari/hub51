<div class="page-header">
  <h1>Entrees</h1>
</div>

<p><%= link_to 'Add a New Entree', new_entree_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entrees.each do |entree| %>
      <tr>
        <td><%= entree.name %></td>
        <td><%= entree.description %></td>
        <td><%= entree.category_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, entree_url(entree), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_entree_url(entree), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, entree_url(entree), method: 'delete', data: { confirm: "Do you really want to delete this entree?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

