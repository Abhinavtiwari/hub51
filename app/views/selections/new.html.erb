<div class="page-header">
  <h1>New Selection</h1>
</div>

<% if @selection.errors.any? %>
  <% @selection.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(selections_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :diner, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :diner, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :first_starter_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :first_starter_id, option_groups_from_collection_for_select(Category.all, :starters, :name, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :second_starter_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :second_starter_id, option_groups_from_collection_for_select(Category.all, :starters, :name, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :first_entree_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :first_entree_id, option_groups_from_collection_for_select(Category.all, :entrees, :name, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :second_entree_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :second_entree_id, option_groups_from_collection_for_select(Category.all, :entrees, :name, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :comments, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :comments, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Selection", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
