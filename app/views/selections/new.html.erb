<div class="page-header">
  <h1>New Selection</h1>
</div>

<%= form_tag(selections_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :diner, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :diner, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :first_starter_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :first_starter_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :second_starter_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :second_starter_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :first_entree_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :first_entree_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :second_entree_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :second_entree_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :comments, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :comments, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Selection", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
